<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-post">
     
     <img src="https://cdn-icons-png.flaticon.com/128/4712/4712846.png" alt="" style="height: 20px; display: inline;">
     <h4>Posts</h4>
     
     <% if(locals.user){ %>
     <form action="/posts/create" id="new-post-form" method="POST">
          <textarea name="content" cols="30" rows="3" placeholder="Type here.." required></textarea>
          <input type="Submit" value="Post">
     </form>
    <% } %>
     <div id="posts-list-container">   
           <!-- home pge pe saari post show krne k liye -->
           <ul>
               <% for(post of posts){ %>
                    <%- include('_post') -%>
                    <!-- partials -->
                  
               <% } %>
           </ul>

     </div>
    </section>

    <section id="user-friends">
     <h4 style="display: inline;">Users</h4>
     <img src="https://cdn-icons-png.flaticon.com/128/1165/1165674.png" alt="friend" style="height: 30px;">
      <% for(u of all_users){ %>
          <p>
               <img src="https://cdn-icons-png.flaticon.com/128/3177/3177440.png" alt="user" style="height: 20px;">
               <a href="/user/profile/<%= u.id %>"> <%= u.name %> </a>
          </p>
      <% } %>
    </section>  

</div>

<script src="/js/home_post.js"></script>